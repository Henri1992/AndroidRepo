<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diceapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/diceappicon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
        android:screenOrientation="portrait" >
        <activity
            android:name="com.example.diceapp.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:label = "@string/app_name" android:name = ".Main" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Connect" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Game" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Dice" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Howto1" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Howto2" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Howto3" android:screenOrientation="portrait"></activity>
        <activity android:label = "@string/app_name" android:name = ".Lobby" android:screenOrientation="portrait"></activity>
        
    </application>

</manifest>